#!/bin/bash

set -e

source "$HOME/okaeri/config/boot"

source "$OKAERI_PATH/core/config/desktop"
source "$OKAERI_PATH/core/config/git"

source "$OKAERI_PATH/core/tools/developer-essentials"
source "$OKAERI_PATH/core/tools/docker"
source "$OKAERI_PATH/core/tools/rbenv"
source "$OKAERI_PATH/core/tools/rclone"
source "$OKAERI_PATH/core/tools/sqlpackage"

## APT cleanup

sudo apt autoremove --yes

. $OKAERI_INITIALIZE_SCRIPT

source "$OKAERI_PATH/usr/bin/rbenv-update"
source "$OKAERI_PATH/core/languages/ruby"

. $OKAERI_INITIALIZE_SCRIPT

echo
echo
echo "Oakeri - Setup complete"
echo "======================="
echo
echo "Either restart a terminal or load the initialization script;"
echo
echo ". $OKAERI_INITIALIZE_SCRIPT"
echo
